@model Category
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">BMI Calculator</h2>
        </div>
    </div>
    <br />

    <form method="post" asp-action="Index" asp-controller="Category">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Enter your details</h2>
                <hr />
            </div>
           
            <div class="mb-3">
                <label asp-for="WeightInKg"></label>
                <input asp-for="WeightInKg" class="form-control" />
                <span asp-validation-for="WeightInKg" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HeightInCm"></label>
                <input asp-for="HeightInCm" class="form-control" />
                <span asp-validation-for="HeightInCm" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @if (Model == null)
                {
                    <span>BMI</span>
                }
                else
                {
                    <span>@Model.BMI</span>
                }
            </div>
            <button type="submit" class="btn btn-primary" style="width: 150px;">Calculate</button>
        </div>
    </form>
</div>